:root {
	--clr-key: hsl(0, 0%, 29%);
	--clr-strong: hsl(0, 0%, 21%);
	--clr-light: hsl(0, 0%, 50%);
	--clr-background: hsl(0, 0%, 100%);
	--clr-shadow: hsla(0, 0%, 4%, 0.1);
	--clr-overlay-bright: hsla(0, 0%, 100%, 0.9);

	--clr-rnd-1: hsl(14, 85%, 50%);
	--clr-rnd-2: hsl(279, 85%, 50%);
	--clr-rnd-3: hsl(201, 85%, 50%);
}